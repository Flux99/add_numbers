// Distributed Job Scheduler System
digraph {
	A [label="Scheduler Node"]
	B [label="Cron Jobs Table"]
	C [label="Scheduled Tasks Table"]
	D [label="DAG Table"]
	E [label=Executor]
	F [label="S3 Storage (Binary Files)"]
	G [label="Message Broker (ActiveMQ)"]
	H [label="Read-Only Replicas"]
	I [label="Change Data Capture (Kafka)"]
	J [label="Zookeeper (Distributed Locks)"]
	A -> B [label="Reads cron schedules"]
	A -> C [label="Schedules tasks based on cron jobs"]
	A -> D [label="Reads DAG job definitions"]
	A -> E [label="Assigns jobs to executors"]
	A -> G [label="Queues jobs"]
	E -> F [label="Fetches binaries for execution"]
	E -> H [label="Checks job status (read-only)"]
	A -> I [label="Updates with job status via Kafka"]
	J -> A [label="Prevents duplicate task execution"]
	G -> E [label="Message Broker routes jobs to executors"]
	E -> F [label="Fetch binaries for tasks"]
	C -> I [label="Change Data Capture updates"]
	E -> J [label="Handles retries and job locks"]
}
